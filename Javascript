// A button that displays the date
<h2>Start of javascript</h2>

<button type="button"
onclick="document.getElementById('display').innerHTML = Date()">
Click me to display Date and Time.</button>

<p id="display"></p>

// Adding a function and button to change the text of a paragraph
<script>
function myFunction() {
  document.getElementById("paraChange").innerHTML = "Changed paragraph";
}
</script>

<p id="paraChange">Hello, this is a test paragraph.</p>

<button type="button" onclick="myFunction()">Click to change</button>

