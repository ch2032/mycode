// Self invoking function
(function () {
  var abc = "Hello!!";  // I will invoke myself
  alert( abc );  
})();


// Creating function
function foo() { alert('hello'); }
// Calling function
foo();


// Nested functions
// Variables from the outer function can be used within the inner function

function outer() { 
  var exampleVar = 3 // This variable is declared within the outer function
  function inner() {
    alert(exampleVar()) // The inner function displays the variable from the inner function
  }
}


// Function adding a string and an integer
function sum(a, b) {
      return a + b;
    }
    sum(7, "4"); // Outputs "74"
// JS coverts the 7 into a string


